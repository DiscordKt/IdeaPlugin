<idea-plugin>
  <id>me.jakejmattson.kutils</id>
  <name>KUtils</name>
  <vendor email="JakeJMattson@gmail.com" url="https://github.com/JakeJMattson">JakeJMattson</vendor>
  <description>
    <![CDATA[
      Provides <a href="https://gitlab.com/Aberrantfox/KUtils/">KUtils</a> support.
      The following features are available:
        <ul>
          <li>Create bot projects from a template.</li>
          <li><s>Suggest code changes.</s></li>
          <li><s>Notifications for updates.</s></li>
        </ul>
      ]]>
  </description>

  <version>0.0.2</version>
  <idea-version since-build="181"/>

  <extensions defaultExtensionNs="com.intellij">
    <moduleType id="KUtils" implementationClass="me.jakejmattson.kutils.framework.KUtilsModuleType"/>
    <moduleBuilder builderClass="me.jakejmattson.kutils.framework.KUtilsWizard" id="KUtilsWizard" order="first"/>
  </extensions>
  <actions>
      <action id="KutilsServiceTemplateAction" class="me.jakejmattson.kutils.templates.ServiceTemplateAction" text="Service"
              description="Create a Service file from a template.">
        <add-to-group group-id="NewGroup" anchor="first"/>
      </action>
  </actions>
</idea-plugin>