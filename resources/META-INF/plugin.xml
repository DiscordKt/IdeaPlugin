<idea-plugin>
  <id>me.jakejmattson.kutils</id>
  <name>KUtils</name>
  <vendor email="JakeJMattson@gmail.com" url="https://github.com/JakeJMattson">JakeJMattson</vendor>
  <description>
    <![CDATA[
      Provides <a href="https://gitlab.com/Aberrantfox/KUtils/">KUtils</a> support.
      The following features are available:
        <ul>
          <li>Create KUtils files from a template.</li>
          <li><s>Create bot projects from a template.</s></li>
          <li><s>Get idiomatic code suggestions.</s></li>
          <li><s>Receive notifications for updates.</s></li>
        </ul>
      ]]>
  </description>

  <version>0.1.0</version>
  <idea-version since-build="181"/>

  <extensions defaultExtensionNs="com.intellij">
    <moduleType id="KUtils" implementationClass="me.jakejmattson.kutils.module.KUtilsModuleType"/>
    <moduleBuilder builderClass="me.jakejmattson.kutils.module.KUtilsModuleBuilder" id="KUtilsWizard" order="first"/>
  </extensions>
  <actions>
      <action text="Service"
              description="Create a KUtils file from a template."
              class="me.jakejmattson.kutils.templates.FileTemplateAction">
        <add-to-group group-id="NewGroup" anchor="first"/>
      </action>
  </actions>
</idea-plugin>