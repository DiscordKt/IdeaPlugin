<idea-plugin>
    <id>me.jakejmattson.kutils-plugin</id>
    <name>KUtils</name>
    <vendor email="JakeJMattson@gmail.com" url="https://github.com/JakeJMattson">JakeJMattson</vendor>
    <description>
        <![CDATA[
            Provides <a href="https://github.com/JakeJMattson/KUtils">KUtils</a> support.
            The following features are available:
            <br/><br/>
            <b>Templates</b>
                <ul>
                    <li>Create KUtils files from a template.</li>
                    <li>Generate code snippets using live templates.</li>
                    <li><s>Create bot projects from a template.</s></li>
                </ul>
            <b>Misc</b>
                <ul>
                    <li><s>Get idiomatic code suggestions.</s></li>
                    <li><s>Receive notifications for updates.</s></li>
                </ul>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="/liveTemplates/KUtils.xml"/>
        <framework.type implementation="me.jakejmattson.kutils.framework.KUtilsFramework"/>
        <moduleType id="KUtils" implementationClass="me.jakejmattson.kutils.module.KUtilsModuleType"/>
    </extensions>

    <actions>
        <action text="FileTemplateAction"
                id="me.jakejmattson.kutils.templates.FileTemplateAction"
                class="me.jakejmattson.kutils.templates.FileTemplateAction">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>